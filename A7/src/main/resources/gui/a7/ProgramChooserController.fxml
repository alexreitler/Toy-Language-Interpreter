<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="gui.a7.ProgramChooserController">
   <VBox alignment="CENTER" style="-fx-background-color: #92D5E6;">
      <ListView fx:id="programsListView"
                style="-fx-background-color: #D3F6DB; -fx-background-radius: 5px; -fx-font-size: 14">
         <VBox.margin>
            <Insets bottom="5.0" left="20.0" right="20.0" top="20.0"/>
         </VBox.margin>
      </ListView>
      <Button fx:id="displayButton" alignment="BASELINE_CENTER"
              mnemonicParsing="false" onAction="#displayProgram" prefHeight="50.0"
              style="-fx-background-color: #A1EF8B; -fx-border-color: #5A0B4D; -fx-border-radius: 15px; -fx-background-radius: 15px;"
              text="Display program" textAlignment="CENTER" textFill="#772D8B">
         <font>
            <Font name="Arial" size="22.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="35.0"/>
         </VBox.margin>
      </Button>
   </VBox>
</StackPane>
